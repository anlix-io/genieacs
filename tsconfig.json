{
  "compilerOptions": {
    "lib": ["ES2022", "dom"],
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2022",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": true,
    "isolatedModules": true
  },
  "include": [
    "./bin/*.ts",
    "./lib/**/*",
    "./ui/**/*",
    "./test/**/*",
    "./build/**/*"
  ]
}
